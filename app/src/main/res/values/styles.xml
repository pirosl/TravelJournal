<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabTheme">
        <!-- <item name="android:background">@color/colorPrimaryChild</item> -->
    </style>

    <!-- Style to be used on notes -->
    <style name="Title" parent="@android:style/TextAppearance.Large">
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/layout_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/layout_horizontal_padding</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/layout_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/layout_horizontal_padding</item>
    </style>

    <style name="FloatingActionButton">
        <item name="elevation">@dimen/material_elevation_fab_resting</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <style name="SmallFloatingActionButton" parent="FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:visibility">invisible</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="AlertDialogButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/alertdialog_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/alertdialog_button_margin</item>
        <item name="android:layout_marginStart">@dimen/alertdialog_button_margin</item>
        <item name="android:layout_marginLeft">@dimen/alertdialog_button_margin</item>
        <item name="android:layout_marginTop">@dimen/alertdialog_button_margin</item>
        <item name="android:background">@drawable/alertdialogbutton_background</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ImageButton">
        <item name="android:tint">@color/colorSecondary</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/imagebutton_background</item>
        <item name="android:paddingLeft">@dimen/imagebutton_horizontal_padding</item>
        <item name="android:paddingStart">@dimen/imagebutton_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/imagebutton_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/imagebutton_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/imagebutton_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/imagebutton_vertical_padding</item>
    </style>

    <style name="ImageView">
        <item name="android:scaleType">center</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">@dimen/list_image_padding</item>
    </style>
</resources>
