<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabTheme">
        <!-- <item name="android:background">@color/colorPrimaryChild</item> -->
    </style>

    <!-- Style to be used on notes -->
    <style name="Title" parent="@android:style/TextAppearance.Large">
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/layout_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/layout_horizontal_padding</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/layout_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/layout_horizontal_padding</item>
    </style>

</resources>
